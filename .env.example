# Example environment variables for ecommerce-fullstack
# Copy this file to .env and modify as needed

# API Configuration
API_PORT=8080
DB_PATH=/app/data/ecommerce.db

# Frontend Configuration  
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080

# Development Configuration
# Uncomment for development mode
# NODE_ENV=development
# GO_ENV=development

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASSWORD=password
# DB_NAME=ecommerce

# JWT Configuration (if needed in future)
# JWT_SECRET=your-secret-key
# JWT_EXPIRES_IN=24h

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=ecommerce-fullstack

# Optional: Override container names
# API_CONTAINER_NAME=ecommerce-api
# FRONTEND_CONTAINER_NAME=ecommerce-frontend
